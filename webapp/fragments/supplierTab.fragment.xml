<core:FragmentDefinition xmlns:core= "sap.ui.core" xmlns="sap.m"
    >
	
		<Table id = "suppTab" items="{/cities}" mode = "MultiSelect" itemPress = "onItemPress">
			
			<headerToolbar>
				<Toolbar>
					<ToolbarSpacer/>
					<Button icon = "sap-icon://filter" press = "onFilter" />
				</Toolbar>
			</headerToolbar>
				  					<columns>
				  					<Column>
				  						<header>
				  							<Text text = "Name"></Text>
				  						</header>
				  					</Column>
				  					<Column>
				  						<header>
				  							<Text text = "Location"></Text>
				  						</header>
				  					</Column>
				  					<Column minScreenWidth = "Tablet" >
				  						<header>
				  							<Text text = "City"></Text>
				  						</header>
				  					</Column>
				  					
				  					<Column minScreenWidth = "Tablet" demandPopin = "true">
				  						<header>
				  							<Text text = "Contact "></Text>
				  						</header>
				  					</Column>
				  					</columns>
				  					
				  					<items>
				  						<ColumnListItem type = "Navigation">
				  							<cells>
				  								<Text text = "{name}"></Text>
				  								<Text text = "{name}"></Text>
				  								<Input value = "{name}" showValueHelp="true" valueHelpRequest="onF4Help"></Input>
				  								<Text text = "{name}"></Text>
				  							</cells>
				  						</ColumnListItem>
				  					</items>
				  					
				  				</Table>
				  				
</core:FragmentDefinition>